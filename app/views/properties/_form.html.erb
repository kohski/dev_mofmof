<%=form_for @property do |f| %>
  <h2>物件登録</h2>
  <div>
    <label>物件名</label><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <label>賃料</label><br>
    <%= f.number_field :rent %>円
  </div>
  <div>
    <label>住所</label><br>
    <%= f.text_field :address %>    
  </div>
  <div>
    <label>築年数</label><br>
    <%= f.number_field :age %>年  
  </div>
  <div>
    <label>備考</label><br>
    <%= f.text_area :remark %>
  </div>
  <hr>
  <%= f.fields_for :stations, @property.stations do |ff| %>
    <h2>最寄り駅<%= ff.index + 1 %></h2>
    <div>
      <label>路線名</label>
      <%= ff.text_field :route %>    
    </div>
    <div>
      <label>駅名</label>
      <%= ff.text_field :name %>    
    </div>
    <div>
      <label>徒歩</label>
      <%= ff.number_field :walking_minute %>分  
    </div>
  <% end %>
  <%= f.submit "登録" %>
<% end %>